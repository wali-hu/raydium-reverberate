{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "bots/**/*",
    "config/**/*",
    "src/**/*",
    "client/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target"
  ]
}
