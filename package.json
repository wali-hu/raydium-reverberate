{
  "name": "atomic-round-trip",
  "version": "1.0.0",
  "description": "Native Solana atomic round-trip swaps on Raydium",
  "main": "client.ts",
  "scripts": {
    "build": "cargo build-sbf --manifest-path=Cargo.toml --sbf-out-dir=target/deploy",
    "deploy": "solana program deploy target/deploy/atomic_swap.so",
    "build-program": "./scripts/build.sh",
    "run:atomic": "./scripts/run-bot.sh atomic",
    "run:volume": "./scripts/run-bot.sh volume",
    "compile": "tsc",
    "test": "ts-node client.ts",
    "simulate": "ts-node simulate.ts",
    "volume": "ts-node -e \"import('./simulate.js').then(m => m.simulateVolumeSwap(process.argv[1], process.argv[2], process.argv[3], parseFloat(process.argv[4]), parseInt(process.argv[5] || '500')))\""
  },
  "dependencies": {
    "@raydium-io/raydium-sdk": "^1.3.1-beta.58",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "borsh": "^0.7.0",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
